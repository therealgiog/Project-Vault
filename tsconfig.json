{
  "compilerOptions": {
    "types": ["jest", "node"],
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
  },
  "include": ["server/**/*.ts", "server/node-mocks-http.d.ts"],
  "exclude": ["node_modules", "dist"]
}
